// A basic calculator
#include<stdio.h>
int main(){
    int a,b;
    char op;
    printf("Enter the value of a:");
    scanf("%d",&a);
    printf("Enter the value of b:");
    scanf("%d",&b);
    printf("Enter the Operator(+,-,*,/,%):");
    scanf(" %c",&op);
    switch (op){
    case '+':
    printf("The answer is:%d\n",a+b);
    break;
    case '-':
    printf("The answer is:%d\n",a-b);
    break;
    case '*':
    printf("The answer is:%d\n",a*b);
    break;
    case '/':
    if(b !=0)
    printf("The answer is:%d\n",a/b);
    else
    printf("ERROR:Division by Zero");
    break;
    case '%':
    if(b !=0)
    printf("The answer is:%d\n",a%b);
    else
    printf("ERROR:Modulus by Zero");
    break;
    default:
    printf("Invalid Operator!!");
}
    return 0;
}