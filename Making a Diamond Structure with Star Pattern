// Making a Diamond Structure with '*'
#include<stdio.h>
int main (){
    int i,j,k,n=3;
    for(i=1;i<=3;i++){
        for(j=3;j>i;j--){
            printf(" ");}
            for (k=1;k<=i;k++){ //we can use k<=2*i-1
                printf("* ");
            }
            printf("\n");
        }
        for(i=n-1;i>=1;i--){
        for(j=3;j>i;j--){
            printf(" ");}
            for (k=1;k<=i;k++){ //we can use k<=2*i-1
                printf("* ");
            }
            printf("\n");
        }
        return 0;
    }