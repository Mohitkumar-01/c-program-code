// Making a Pyramid in the Center
#include<stdio.h>
 int main (){
    int i,j,k;
    for(i=1;i<=7;i++){
        for(j=7;j>i;j--){
            printf(" ");
        }
        for(k=1;k<=i;k++){
            printf("* ");// here also we can use k<=2*i-1
        }
        printf("\n");
    }
    return 0;
}
